# Testing Environment Configuration
# This configuration is used by PHPUnit/Pest tests

# Application Configuration
APP_NAME="Gutin Blog Test"
APP_ENV=testing
APP_KEY=base64:test_key_for_testing_environment_only
APP_DEBUG=true
APP_URL=http://localhost

# Localization
APP_LOCALE=ru
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ru_RU

# Security (faster for testing)
BCRYPT_ROUNDS=4

# Logging
LOG_CHANNEL=single
LOG_LEVEL=debug

# PostgreSQL Test Database Configuration
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5435
DB_DATABASE=gutin_blog_test
DB_USERNAME=gutin_user
DB_PASSWORD=password

# Testing Configuration
SESSION_DRIVER=array
CACHE_STORE=array
QUEUE_CONNECTION=sync
MAIL_MAILER=array

# Disable external services during testing
BROADCAST_CONNECTION=log
PULSE_ENABLED=false
TELESCOPE_ENABLED=false
